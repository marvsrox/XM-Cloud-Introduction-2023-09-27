{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "src",
    "tsBuildInfoFile": "./types/tsbuildinfo",
    "declarationDir": "./types"
  },
  "references": [
    {
      "path": "../sdk"
    }
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["scripts/**", "test/**", "types/**", "build/**", "dist/**", "node_modules/**"]
}
