{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "rootDir": "src",
    "tsBuildInfoFile": "./types/tsbuildinfo",
    "declarationDir": "./types",
    "outDir": "./build"
  },
  "references": [
    {
      "path": "../sdk"
    }
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["scripts/**", "src/ui/**", "test/**", "types/**", "build/**", "dist/**", "node_modules/**"]
}
